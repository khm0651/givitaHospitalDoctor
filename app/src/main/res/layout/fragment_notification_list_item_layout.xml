<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/fragment_notification_item_width"
            android:layout_height="@dimen/fragment_notification_item_height"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/info_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/notiTV"
                    android:layout_width="323.26px"
                    android:layout_height="123px"
                    android:text="조윤진님 외 2명이\n측정값을 보냈습니다.\nEMR에 등록할까요?"
                    android:textColor="@color/notification_text"
                    android:textSize="28px"
                    android:layout_marginLeft="55.19px"
                    android:layout_marginTop="21px"
                    android:layout_marginRight="40.55px"
                    android:layout_marginBottom="91px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/notiBtn"
                    android:layout_width="398.73px"
                    android:layout_height="57.1px"
                    android:backgroundTint="@color/notification_button"
                    android:layout_marginLeft="10.14px"
                    android:layout_marginTop="164.45px"
                    android:layout_marginRight="10.14px"
                    android:layout_marginBottom="13.45px"
                    app:cornerRadius="19px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="323.26px"
                    android:layout_height="30px"
                    android:text="EMR 일괄등록"
                    android:textSize="20px"
                    android:gravity="center"
                    android:layout_marginLeft="37.17px"
                    android:layout_marginTop="12.55px"
                    android:layout_marginRight="38.3px"
                    android:layout_marginBottom="14.55px"
                    app:layout_constraintStart_toStartOf="@+id/notiBtn"
                    app:layout_constraintTop_toTopOf="@+id/notiBtn"
                    app:layout_constraintEnd_toEndOf="@+id/notiBtn"
                    app:layout_constraintBottom_toBottomOf="@+id/notiBtn"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>